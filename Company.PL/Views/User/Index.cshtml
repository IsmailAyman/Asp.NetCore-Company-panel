@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />


<div class="row justify-content-center align-content-center">
    <form class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="email" placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>
<br />
@if (TempData["message"] is not null)
{
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U=>U.Id)</th>
                <th>@Html.DisplayNameFor(U=>U.FName)</th>
                <th>@Html.DisplayNameFor(U=>U.LName)</th>
                <th>@Html.DisplayNameFor(U=>U.Email)</th>
                <th>@Html.DisplayNameFor(U=>U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U=>U.Roles)</th>       
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(",",user.Roles)</td>
                    
                    <partial name="_ButtonsPartialView" model="user.Id" />

                </tr>
            }

        </tbody>

    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>there is no Users</h3>
    </div>
}

